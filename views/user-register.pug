extends layout

include utils.pug

append head
  link(rel="stylesheet" href="/stylesheets/forms.css")
  link(rel="stylesheet" href="/stylesheets/background-right.css")

  .header-div
    a(href='/')
      img(src=" ../berry-single.png", class= "berry-single")
    h1(class="iMember-h1") iMember
    div.logButtons
      ul(class='nav-container')
        li(class='nav-link-wrapper')
          a(class='nav-link' href="/users/register") Register
        li(class='nav-link-wrapper')
          a(class='nav-link' href="/users/login") Login

block content
  body
    .main
      +validationErrorSummary(errors)
      form(action="/users/register" method="post")
        div.reg-title
          h1(class='reg-head') Register for new account
        input(type="hidden", name="_csrf" value=csrfToken)
        +field('Username', 'userName', newUser.userName)
        +field('Email', 'email', newUser.email, 'email')
        +field('Password', 'password', '', 'password')
        +field('Confirm Password', 'confirmPassword', '', 'password')
        div.reg-buttons
          button(type="submit" class="reg-button") Submit
          a(href='/')
            button(type="button" class="reg-button") Cancel
        div.have-account
          a(href='/users/login') Already have an account?
