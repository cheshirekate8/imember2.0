extends layout.pug

include utils.pug

append head
  link(rel="stylesheet" href="/stylesheets/forms.css")
  link(rel="stylesheet" href="/stylesheets/background-left.css")
  script(src="/javascripts/demo-login.js" type="module" defer)

  .header-div
    a(href='/')
      img(src="../berry-single.png", class= "berry-single")
    h1(class="iMember-h1") iMember
    div.logButtons
      ul(class='nav-container')
        li(class='nav-link-wrapper')
          a(class='nav-link' href="/users/register") Register
        li(class='nav-link-wrapper')
          a(class='nav-link' href="/users/login") Login

block content
  body
    .main
      +validationErrorSummary(errors)
      form(action='/users/login' method='post' class="loginForm")
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('Email Address', 'email', email)
        +field('Password', 'password', null, 'password')
        div(class='submit-button')
        a(href='/users/register') Don't have an account?
        button(type='submit') Login
        button(type="submit" id="demo") Demo User
        div.cancel-container
          a(href='/')
            button(type="button") Cancel
