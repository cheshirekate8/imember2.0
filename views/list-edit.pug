extends layout

include utils.pug

append head
  link(rel="stylesheet" href="/stylesheets/forms.css")
  link(rel="stylesheet" href="/stylesheets/list-new.css")

  .header-div
    a(href='/home')
      img(src=" ../berry-single.png", class= "berry-single")
    h1(class="iMember-h1") iMember
    div.logButtons
      a(href='/users/logout' class="logout-container")
        button(name="New List" class="logout-button") Logout

block content
  .main
    a(href='/home') Home
    +validationErrorSummary(errors)
    body
      form(action=`/lists/${list.id}/edit` method="post")
        input(type="hidden", name="_csrf" value=csrfToken)
        +field('Name', 'name', list.name)
        div.buttonGroup
          button(type="submit") Edit List
      a(class='btn btn-warning ml-2' href='/home' role='button')
        button Cancel
